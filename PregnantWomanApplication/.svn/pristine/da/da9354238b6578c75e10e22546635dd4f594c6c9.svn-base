<resources>

    <!-- Base application theme. -->
    <!-- inherit from the material theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/blue_color</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_dialog</item>
    </style>


    <style name="PopUpAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_out_activity</item>
        <item name="android:windowExitAnimation">@anim/slide_in_activity</item>
    </style>

    <style name="FadeINOUT">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="DialogSlideAnimSecond" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/PopUpAnimation</item>
    </style>

    <style name="DialogFadeAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/FadeINOUT</item>
    </style>
    <!--for menu-->
    <!-- Base application theme. -->
    <style name="AppThememenu" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/accent_material_dark</item>
        <item name="colorPrimaryDark">@color/accent_material_dark</item>
        <item name="colorAccent">@color/accent_material_dark</item>
    </style>


    <declare-styleable name="NiceSpinner">
        <attr name="arrowTint" format="color" />
        <attr name="hideArrow" format="boolean" />
    </declare-styleable>
</resources>
