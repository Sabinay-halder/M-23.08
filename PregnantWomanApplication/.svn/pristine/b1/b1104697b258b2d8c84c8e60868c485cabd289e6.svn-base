<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/dialog_rounded_white_background"
    android:clickable="true">


    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:orientation="horizontal">

        <com.widevision.pregnantwoman.model.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_message"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="sfsdfdsfds"
            android:textColor="@color/black"
            android:gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <com.widevision.pregnantwoman.model.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No"
                android:gravity="center"
                android:textColor="@color/black"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/dialog_no"
                android:padding="10dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_no_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.widevision.pregnantwoman.model.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Yes"
                android:textColor="@color/accent_material_light"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/dialog_ok"
                android:padding="10dp" />


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
