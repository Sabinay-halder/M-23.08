<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent_foodIntake"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baby_background"
    android:clickable="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttomLayout"
        android:fadingEdge="none"
        android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Title-->


            <com.widevision.pregnantwoman.model.CustomTextView
                android:id="@+id/txtfoodintake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="@string/foodintake"
                android:textColor="@color/heading"
                android:textSize="20sp" />

            <com.widevision.pregnantwoman.model.CustomTextViewBold
                android:id="@+id/etnamefoodin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Baby name"
                android:textColor="@color/baby_name"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/bttnotefoodintake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:gravity="center"
                android:src="@drawable/right_arrow" />
            <!---->
            <!--Name-->


            <!---->

            <!--Date of birth-->

            <LinearLayout
                android:id="@+id/lldob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etdateofbirthfoodin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Date "
                    android:inputType="date"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextColor="@color/text_color"
                    app:met_floatingLabelTextSize="@dimen/text_size" />

            </LinearLayout>

            <!---->

            <!--Start Time-->

            <LinearLayout
                android:id="@+id/llintaketime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etintaketime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:editable="false"
                    android:focusable="true"
                    android:hint="Intake Time"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextColor="@color/text_color"
                    app:met_floatingLabelTextSize="@dimen/text_size" />


            </LinearLayout>
            <!---->

            <!--Intake-->

            <LinearLayout
                android:id="@+id/llintake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                android:padding="5dp">

                <!--<com.rengwuxian.materialedittext.MaterialEditText-->
                <!--android:id="@+id/etintakefoodin"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="Intake"-->
                <!--android:textColor="@color/text_color"-->
                <!--android:editable="false"-->
                <!--app:met_floatingLabelTextColor="#8805ad"-->
                <!--android:clickable="true"-->
                <!--android:focusable="true"-->
                <!--app:met_floatingLabel="highlight"-->
                <!--android:layout_marginTop="10dp" />-->
                <com.widevision.pregnantwoman.model.CustomTextView
                    android:id="@+id/spintakefoodin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:drawableRight="@drawable/arrow_dialog"
                    android:focusable="true"
                    android:hint="Select Intake"
                    android:padding="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#000000"></View>
            </LinearLayout>

            <!---->
            <!--Other Intake-->

            <LinearLayout
                android:id="@+id/llother"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etotherintake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:editable="true"
                    android:focusable="true"
                    android:hint="Other Intake"
                    android:inputType="textPersonName"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextColor="@color/text_color"
                    app:met_floatingLabelTextSize="@dimen/text_size" />

            </LinearLayout>

            <!---->


            <!--Quantity-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3.5">

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etquantityfoodin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:editable="true"
                    android:focusable="true"
                    android:hint="Quantity"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    app:met_floatingLabel="highlight"
                    app:met_floatingLabelTextColor="@color/text_color"
                    app:met_floatingLabelTextSize="@dimen/text_size" />

                <com.widevision.pregnantwoman.model.CustomTextView
                    android:id="@+id/spquantity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1.5"
                    android:drawableRight="@drawable/arrow_dialog"
                    android:hint="Select"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="15sp"></com.widevision.pregnantwoman.model.CustomTextView>


            </LinearLayout>
            <!---->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center|bottom"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="#7F000000"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleRoundedCorners="@dimen/ripple_corner">

                    <ImageView
                        android:id="@+id/bttncancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/cancel" />
                </com.balysv.materialripple.MaterialRippleLayout>

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:mrl_rippleAlpha="0.2"
                    app:mrl_rippleColor="#7F000000"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    app:mrl_rippleRoundedCorners="@dimen/ripple_corner">

                    <ImageView
                        android:id="@+id/bttnsave"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/baby_save" />
                </com.balysv.materialripple.MaterialRippleLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"></LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
